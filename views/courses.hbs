<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <hr />

        
        <div class="table-responsive">

            <table class="table ">
                <thead>
                    <tr>
                        <th>Course&nbsp;Code</th>
                        <th>Course&nbsp;Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>    
                        <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">Remove</a></td>   
                    </tr>
                    {{else}}
                    <div class="col-md-12 text-center">
                        <strong>{{message}}</strong>
                    </div>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>